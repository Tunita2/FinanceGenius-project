  <body>
    <!-- Phần đầu : Tạo quỹ -->
    <header>
      <div class="header-container">
        <button class="back-btn"><i class="bi bi-arrow-left"></i></button>
        <h1>Tạo quỹ</h1>
        <button class="settings-btn"><i class="bi bi-gear"></i></button>
      </div>
    </header>

    <!-- Phần chính: Hoạt động tạo quỹ -->
    <main>
      <form action="/created-budget" , method="GET">
        <section class="my-fund">
          <div class="title_first">
            <h2>Quỹ của tôi</h2>
            <a href="/budget-create">
              <div class="add-fund-btn">+ Tạo quỹ (1/10)</div>
            </a>
          </div>
          <% listBudget.forEach(function(budget) { %>
            <div class="fund-card">
              <div class="block_content_img">
                <span class="fund-label">Chủ quỹ</span>
                <img
                  src="/images/anh_restaurant.png"
                  alt="Nhà hàng"
                  class="fund-image"
                />
                <div class="title_fund"><%= budget.budget_name %></div>
              </div>
        
              <div class="progress-bar">
                <div class="progress" style="width: 20%"></div>
              </div>
              <p class="fund-amount"><%= budget.budget_amount %></p>
            </div>
          <% }); %>
        </section>

        <section class="suggested-funds">
          <h2>Các gợi ý tạo quỹ khác</h2>
          <div class="fund-option personal">⭐ Mở quỹ cá nhân</div>
          <div class="fund-option couple">❤️ Mở quỹ với người yêu</div>
          <div class="fund-option friends">👥 Mở quỹ với bạn bè</div>
          <div class="fund-option work">💼 Mở quỹ với đồng nghiệp</div>
        </section>

        <section class="help-section">
          <button class="help-btn">📖 Hướng dẫn chi tiêu</button>
          <button class="help-btn">💰 Hạn mức quỹ</button>
        </section>
      </form>
    </main>

