<script>
    document.addEventListener("DOMContentLoaded", function () {
        let loginLink = document.querySelector("a[name='buttonnavregister']");
        loginLink.addEventListener("click", function (event) {
            event.preventDefault(); // Ngăn trình duyệt chuyển hướng ngay lập tức

            // Hiển thị thông báo hoặc thực hiện kiểm tra dữ liệu trước khi chuyển trang
            if (confirm("Bạn có chắc chắn muốn chuyển đến trang đăng ký?")) {
                window.location.href = "/register";
            }
        });
    });
